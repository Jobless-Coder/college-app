<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rawryx.kgeccampus.activities.RoutineActivity">


    <TextView
        android:id="@+id/department"
        android:layout_width="176dp"
        android:layout_height="43dp"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="60dp"
        android:text="select_department"


        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/spinner1"
        app:layout_constraintEnd_toStartOf="@+id/spinner1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spinner1"
        android:layout_marginLeft="60dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="64dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="85dp"


        android:layout_marginTop="72dp"
        android:layout_toRightOf="@+id/department"
        app:layout_constraintEnd_toEndOf="@+id/department"
        app:layout_constraintStart_toEndOf="@+id/department"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="85dp" />

    <TextView
        android:id="@+id/semester"
        android:layout_width="175dp"
        android:layout_height="37dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="184dp"
        android:text="select_semester"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="60dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="184dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="332dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.178" />


</android.support.constraint.ConstraintLayout>
